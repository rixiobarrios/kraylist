<div class="text-center">
  <h1>Categories</h1>
</div>

<div class="row justify-content-center">
  <div class="col-auto">
  <table class="table table-responsive table-bordered">
  <thead>
    <tr>
      <th>Choose a category</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <!--<td><%#= category.title %></td>-->
        <!--<td><%#= category.location_id %></td>-->
        <td>
          <button type="button" class="btn-default btn-lg"><%= link_to category.title.to_s, category %></button>
          <!--<button type="button" class="btn-default btn-lg"><%#= category.title %></button>-->
        </td>
        <td><%= category.location.city %>

        <% if user_signed_in? && current_user.username == "admin" %>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

<div class="text-center">
  <% if user_signed_in? && current_user.username == "admin" %>
  <%= link_to 'New category', new_category_path %>
  <% end %>
</div>
