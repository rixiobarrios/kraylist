<div class="text-center">
  <h1><%= @category.title %> Listings in <%= @category.location.city %></h1>
</div>

<div class="row justify-content-center">
  <div class="col-auto">
    <!--<table class="table table-responsive table-bordered">-->
    <table class="table table-responsive table-borderless">
      <thead>
        <tr>
          <!--<th>Seller</th>-->
          <!--<th>Buyer</th>-->
          <th>Image</th>
          <th>Title</th>
          <!--<th>Details</th>-->
          <th>Category</th>
          <th>Location</th>
          <th>Sold?</th>
          <th>Created</th>
          <th>Updated</th>
          <!--<th colspan="3"></th>-->
        </tr>
      </thead>

      <tbody>
        <% @category.listings.each do |listing| %>
          <tr>

            <% if listing.sold == false %>

            <!--<td><%#= listing.seller_id %></td>-->
            <!--<td><%#= listing.buyer_id %></td>-->
            <!--<td><%#= listing.image %></td>-->
            <td><%= image_tag listing.image.url, class: "rounded-3 shadow p-0 mb-1 bg-white rounded", width: "75px", alt: "thumbnail" %></td>
            <!--<td><%= listing.title %></td>-->
            <td><%= link_to listing.title.to_s, listing %></td>
            <!--<td><%#= listing.details %></td>-->
            <!--<td><%#= listing.category_id %></td>-->
            <td><%= listing.category.title %></td>
            <td><%= listing.location.city %></td>
            <td><%= humanize_boolean(listing.sold?) %></td>
            <!--<td><%#= listing.created_at %></td>-->
            <td><%= time_ago_in_words(listing.created_at) %> ago</td>
            <td><%= time_ago_in_words(listing.updated_at) %> ago</td>

            <% if user_signed_in? && current_user.username == "admin" %>

            <td><%= link_to 'Show', listing %></td>
            <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
            <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>

            <% end %>

            <% else %>

            <!--<td><%#= link_to listing.seller.username.capitalize, @user %></td>-->
            <!--<td class="table-secondary"><cite title="Source Title"><%#= listing.seller.username.capitalize %></cite></td>-->
            <td class="table-secondary"><%= image_tag listing.image.url, class: "rounded-3 shadow p-0 mb-1 bg-white rounded", width: "75px", alt: "thumbnail" %></td>
            <!--<td><%#= link_to listing.title.capitalize, listing %></td>-->
            <td class="table-secondary"><cite title="Source Title"><%= listing.title.capitalize %></cite></td>
            <td class="table-secondary"><cite title="Source Title"><%= listing.category.title.capitalize %></cite></td>
            <td class="table-secondary"><cite title="Source Title"><%= listing.location.city.capitalize %></cite></td>
            <td class="table-secondary"><cite title="Source Title"><%= humanize_boolean(listing.sold?) %></cite></td>
            <td class="table-secondary"><cite title="Source Title"><%= time_ago_in_words(listing.created_at) %> ago</cite></td>
            <td class="table-secondary"><cite title="Source Title"><%= time_ago_in_words(listing.updated_at) %> ago</cite></td>

            <% if user_signed_in? && current_user.username == "admin" %>

            <td class="table-secondary"><%= link_to 'Show', listing %></td>
            <td class="table-secondary"><%= link_to 'Edit', edit_listing_path(listing) %></td>
            <td class="table-secondary"><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            
            <% end %>

            <% end %>

          </tr>
        <% end %>

      </tbody>
    </table>
  </div>  
</div>  

