<div class="text-center">
  <h1>Categories in <%= @location.city %></h1>
</div>

<div class="row justify-content-center">
  <div class="col-auto">
  <table class="table table-responsive table-borderless">
  <thead>
    <tr>
      <th>Choose a category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location.categories.each do |category| %>
      <tr>
        <!--<td><%#= category.title %></td>-->
        <!--<td><%#= category.location_id %></td>-->
        <td>
          <button type="button" class="btn-default btn-lg"><%= link_to category.title.to_s, category %></button>
          <!--<button type="button" class="btn-default btn-lg"><%#= category.title %></button>-->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>


